# Function to reverse the entire string\
reverse_entire() \{\
  echo "$1" | rev\
\}\
\
# Function to reverse each word in the string but keep the word order intact\
reverse_words() \{\
  for word in $1; do\
    echo -n "$(echo "$word" | rev) "\
  done\
  echo\
\}\
\
# Check if any input is provided\
if [ $# -eq 0 ]; then\
  echo "Error: Invalid input. Use -e for entire reversal or -w for word reversal."\
  exit 1\
fi\
