  if [ -z "$2" ]; then\
    echo "Error: Invalid input. Use -e for entire reversal or -w for word reversal."\
    exit 1\
  fi\
  reverse_words "$2"\
\
# Handle invalid or missing flags\
else\
  echo "Error: Invalid input. Use -e for entire reversal or -w for word reversal."\
  exit 1\
fi\
}